{
  "version": 2,
  "name": "ai-ocr-poc",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "app/api/ocr/route.js": {
      "maxDuration": 60
    },
    "app/api/render/route.js": {
      "maxDuration": 30
    }
  }
}
